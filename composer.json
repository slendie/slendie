{
    "name": "slendie/slendie",
    "description": "Micro PHP framework for simple projects",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Luciano Closs",
            "email": "lcloss@lcloss.dev"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "phpunit/phpunit": "9.5.x-dev",
        "slendie/framework": "dev-local",
        "slendie/tools": "dev-local",
        "slendie/crawler": "dev-local"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "files": [
            "helpers/functions.php"
        ]
    },
    "repositories": [
        {
            "type": "path",
            "url":  "packages/slendie/framework",
            "options": {
                "versions": {
                    "slendie/framework": "dev-local"
                }
            }            
        },
        {
            "type": "path",
            "url":  "packages/slendie/tools",
            "options": {
                "versions": {
                    "slendie/tools": "dev-local"
                }
            }            
        },
        {
            "type": "path",
            "url":  "packages/slendie/crawler",
            "options": {
                "versions": {
                    "slendie/crawler": "dev-local"
                }
            }            
        }
    ]
}
